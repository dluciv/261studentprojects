<Window x:Class="Ex3Editor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="338" Width="685">
    <DockPanel Width="Auto" Height="Auto" LastChildFill="True">
        <Menu Width="Auto" Height="20" Background="#FFA9D1F4"
            DockPanel.Dock="Top">

            <!-- File Menu -->
            <MenuItem Header="File">
                <MenuItem Header="Save"/>
                <Separator/>
                <MenuItem Header="Exit"/>

            </MenuItem>
            <!-- About Menu -->
            <MenuItem Header="Help">

                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>
        
        <StackPanel Width="Auto" Height="31" Background="#FFA9D1F4"
            Orientation="Horizontal" DockPanel.Dock="Bottom">
            <StatusBar Height="23" Name="statusBar1" Background="#FFA9D1F4" VerticalAlignment="Bottom">
                <StatusBarItem>
                    Редактор запущен
                </StatusBarItem>
            </StatusBar>
        </StackPanel>
        <TextBox Name="MainTextBox" AcceptsTab="True" AcceptsReturn="True" AutoWordSelection="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible"></TextBox>
    </DockPanel>
</Window>
